<Window
    x:Class="SIBILIATP11.Windows.WindowConnexion"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:SIBILIATP11.Windows"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Connexion - Sibilia"
    Width="900"
    Height="600"
    AllowsTransparency="True"
    Background="Transparent"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None"
    mc:Ignorable="d">

    <Border Background="White" CornerRadius="20">
        <Border.Effect>
            <DropShadowEffect BlurRadius="20" Opacity="0.3" ShadowDepth="0" Color="Black" />
        </Border.Effect>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" Background="#E30613" CornerRadius="20,0,0,20">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <Border Grid.Row="1" Margin="40" Background="White" CornerRadius="15">
                        <Image Margin="30" RenderOptions.BitmapScalingMode="HighQuality" 
                               Source="/logo-sibilia.png" Stretch="Uniform" />
                    </Border>

                    <StackPanel Grid.Row="2" Margin="40,0" VerticalAlignment="Top">
                        <TextBlock Margin="0,0,0,10" HorizontalAlignment="Center" FontSize="28" 
                                   FontWeight="Bold" Foreground="White" Text="BIENVENUE" />
                        <TextBlock FontSize="14" Foreground="White" Opacity="0.9" 
                                   Text="Connectez-vous pour accéder à votre espace de gestion des commandes" 
                                   TextAlignment="Center" TextWrapping="Wrap" />
                    </StackPanel>
                </Grid>
            </Border>

            <Grid Grid.Column="1" Margin="40">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <Button x:Name="BtnFermer" Grid.Row="0" Width="30" Height="30" 
                        HorizontalAlignment="Right" VerticalAlignment="Top" Background="Transparent" 
                        BorderBrush="Transparent" Click="BtnFermer_Click" Content="✕" Cursor="Hand" 
                        FontSize="16" FontWeight="Bold" Foreground="#CCCCCC">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" CornerRadius="15">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#FFE30613" />
                                                <Setter Property="Foreground" Value="White" />
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                </Button>

                <StackPanel Grid.Row="1" Margin="0,20" VerticalAlignment="Center">
                    <TextBlock Margin="0,0,0,40" HorizontalAlignment="Center" FontSize="32" 
                               FontWeight="Bold" Foreground="#333333" Text="CONNEXION" />

                    <Grid Margin="0,0,0,25">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Margin="5,0,0,8" FontSize="14" FontWeight="SemiBold" 
                                   Foreground="#666666" Text="👤 Identifiant" />

                        <Border Grid.Row="1" Background="White" BorderBrush="#E0E0E0" 
                                BorderThickness="2" CornerRadius="8">
                            <TextBox x:Name="TxtLogin" Padding="15,12" Background="Transparent" 
                                     BorderThickness="0" FontSize="14" Foreground="#333333" 
                                     TextChanged="TxtLogin_TextChanged" />
                        </Border>
                    </Grid>

                    <Grid Margin="0,0,0,35">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Margin="5,0,0,8" FontSize="14" FontWeight="SemiBold" 
                                   Foreground="#666666" Text="🔒 Mot de passe" />

                        <Border x:Name="PasswordBorder" Grid.Row="1" Background="White" 
                                BorderBrush="#E0E0E0" BorderThickness="2" CornerRadius="8">
                            <PasswordBox x:Name="TxtPassword" Padding="15,12" Background="Transparent" 
                                         BorderThickness="0" FontSize="14" Foreground="#333333" 
                                         KeyUp="TxtPassword_KeyUp" PasswordChanged="TxtPassword_PasswordChanged" />
                        </Border>
                    </Grid>

                    <Border x:Name="ErrorBorder" Margin="0,0,0,20" Padding="15,10" Background="#FFE6E6" 
                            BorderBrush="#FF6B6B" BorderThickness="1" CornerRadius="5" Visibility="Collapsed">
                        <TextBlock x:Name="ErrorMessage" FontSize="12" Foreground="#C62828" 
                                   Text="❌ Identifiant ou mot de passe incorrect" TextAlignment="Center" />
                    </Border>

                    <Button x:Name="ButSeConnecter" Height="50" Margin="0,0,0,20" Background="#E30613" 
                            BorderBrush="Transparent" Click="ButSeConnecter_Click" Content="🚀 SE CONNECTER" 
                            Cursor="Hand" FontSize="16" FontWeight="Bold" Foreground="White">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" 
                                                    BorderBrush="{TemplateBinding BorderBrush}" 
                                                    BorderThickness="{TemplateBinding BorderThickness}" 
                                                    CornerRadius="25">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="#D50510" />
                                                </Trigger>
                                                <Trigger Property="IsPressed" Value="True">
                                                    <Setter Property="Background" Value="#B8040E" />
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>

                <StackPanel Grid.Row="2" Margin="0,20,0,0" VerticalAlignment="Bottom">
                    <TextBlock HorizontalAlignment="Center" FontSize="11" Foreground="#AAAAAA" 
                               Text="© 2025 Sibilia - Gestion des Commandes" />
                </StackPanel>
            </Grid>
        </Grid>
    </Border>
</Window>