<Window
    x:Class="SIBILIATP11.Windows.WindowConnexion"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:SIBILIATP11.Windows"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="WindowConnexion"
    Width="800"
    Height="450"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <Grid>
        <StackPanel x:Name="StackPanelDebutLogo" Margin="150,20,150,320">
            <StackPanel.Background>
                <ImageBrush ImageSource="/Windows/logo-sibilia.png" Stretch="Uniform" />
            </StackPanel.Background>
        </StackPanel>
        <TextBlock
            x:Name="Identifiant"
            Margin="0,150,0,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            FontWeight="Bold"
            Text="Login"
            TextWrapping="Wrap" />
        <TextBox
            x:Name="TxtLogin"
            Width="252"
            Margin="0,173,0,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Text=""
            TextWrapping="Wrap" />
        <TextBlock
            x:Name="MotDePasse"
            Margin="0,196,0,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            FontWeight="Bold"
            Text="Mot de Passe"
            TextWrapping="Wrap" />
        <TextBox
            x:Name="TxtPassword"
            Width="252"
            Margin="0,217,0,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Text=""
            TextWrapping="Wrap" />
        <Button
            x:Name="ButSeConnecter"
            Width="112"
            Margin="0,264,0,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Content="Se Connecter"
            FontWeight="Bold" />
    </Grid>
</Window>
