<Window
    x:Class="SIBILIATP11.Windows.WindowConnexion"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:SIBILIATP11.Windows"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="WindowConnexion"
    Width="800"
    Height="450"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterOwner"
    WindowStyle="None"
    mc:Ignorable="d">
    <Grid>
        <StackPanel x:Name="StackPanelDebutLogo" Margin="150,43,150,297">
            <StackPanel.Background>
                <ImageBrush ImageSource="/Windows/logo-sibilia.png" Stretch="Uniform" />
            </StackPanel.Background>
        </StackPanel>
        <TextBlock
            x:Name="Identifiant"
            Margin="274,234,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            FontWeight="Bold"
            Text="Identifiant"
            TextWrapping="Wrap" />
        <TextBox
            x:Name="TxtLogin"
            Width="252"
            Margin="0,255,0,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Text=""
            TextWrapping="Wrap" />
        <TextBlock
            x:Name="MotDePasse"
            Margin="274,286,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            FontWeight="Bold"
            Text="Mot de Passe"
            TextWrapping="Wrap" />
        <PasswordBox
            x:Name="TxtPassword"
            Width="252"
            Margin="0,307,0,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            KeyUp="TxtPassword_KeyUp" />
        <Button
            x:Name="ButSeConnecter"
            Width="176"
            Height="32"
            Margin="0,360,0,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Background="#FFE30613"
            BorderBrush="Red"
            Click="ButSeConnecter_Click"
            Content="Se Connecter"
            FontWeight="Bold"
            Foreground="White" />
        <TextBlock
            x:Name="ConnexionTxt"
            Margin="0,189,0,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            FontSize="16"
            FontWeight="Bold"
            Foreground="#FFE30613"
            Text="Connexion"
            TextWrapping="Wrap" />
        <Rectangle
            Width="800"
            Height="26"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Fill="#FFE30613" />
        <Button
            x:Name="ButFermer"
            Margin="757,3,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Background="White"
            BorderBrush="White"
            Click="ButFermer_Click"
            Content="Fermer" />
    </Grid>
</Window>
