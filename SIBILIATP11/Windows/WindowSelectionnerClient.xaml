<Window
    x:Class="SIBILIATP11.Windows.WindowSelectionnerClient"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:SIBILIATP11.Windows"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Sélectionner un Client"
    Width="800"
    Height="500"
    mc:Ignorable="d">
    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!--  Barre de recherche et boutons  -->
        <Border
            Grid.Row="0"
            Margin="30,30,30,10"
            Padding="10"
            Background="#F5F5F5">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <!--  Section recherche  -->
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <TextBlock
                        Margin="0,0,10,0"
                        VerticalAlignment="Center"
                        FontWeight="Bold"
                        Text="Rechercher :" />
                    <TextBox
                        x:Name="txtRecherche"
                        Width="300"
                        Height="25"
                        VerticalContentAlignment="Center"
                        TextChanged="TxtRecherche_TextChanged"
                        ToolTip="Rechercher par nom, prénom, téléphone, adresse ou ville" />
                    <Button
                        x:Name="btnEffacerRecherche"
                        Width="25"
                        Height="25"
                        Margin="5,0,0,0"
                        Click="BtnEffacerRecherche_Click"
                        Content="✕"
                        FontWeight="Bold"
                        ToolTip="Effacer la recherche" />
                </StackPanel>

                <!--  Bouton ajouter client  -->
                <Button
                    x:Name="btnAjouterClient"
                    Grid.Column="1"
                    Height="30"
                    Padding="15,5"
                    Background="#FFFD2828"
                    Click="BtnAjouterClient_Click"
                    Content="+ Ajouter un client"
                    FontWeight="Bold"
                    Foreground="White"
                    ToolTip="Créer un nouveau client" />
            </Grid>
        </Border>

        <!--  DataGrid  -->
        <DataGrid
            x:Name="clients"
            Grid.Row="1"
            Height="350"
            Margin="30,0,30,30"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            AutoGenerateColumns="False"
            IsReadOnly="True"
            ItemsSource="{Binding .}">
            <DataGrid.Columns>
                <DataGridTextColumn
                    Width="50"
                    Binding="{Binding NumClient, ValidatesOnExceptions=False}"
                    Header="Num" />
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding NomClient, ValidatesOnExceptions=True}"
                    Header="Nom" />
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding PrenomClient, ValidatesOnExceptions=True}"
                    Header="Prenom" />
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding Tel, ValidatesOnExceptions=True}"
                    Header="Téléphone" />
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding AdresseRue, ValidatesOnExceptions=True}"
                    Header="Adresse" />
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding AdresseCP, ValidatesOnExceptions=True}"
                    Header="Code postal" />
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding AdresseVille, ValidatesOnExceptions=True}"
                    Header="Ville" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
