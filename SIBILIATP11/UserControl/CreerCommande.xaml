<UserControl x:Class="SIBILIATP11.UserControl.CreerCommande"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SIBILIATP11.UserControl"
             mc:Ignorable="d"
             d:DesignHeight="450"
             d:DesignWidth="800">

    <Grid Background="White">
        <StackPanel>
            <StackPanel Height="60" VerticalAlignment="Top" Margin="20,0,20,0">
                <Label Width="150" Height="30" Content="Rechercher :" HorizontalAlignment="Left" VerticalAlignment="Top"/>
                <TextBox Height="30"></TextBox>
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Height="30" VerticalAlignment="Top" Margin="0,10,0,0">
                <ComboBox Width="150"/>
                <DatePicker Margin="30,0,0,0"/>
                <Label Content="De" Margin="30,0,0,0"/>
                <TextBox Width="50" Margin="5,0,0,0"/>
                <Label Content="à" Margin="5,0,0,0"/>
                <TextBox Width="50" Margin="5.5,0,0,0"/>

            </StackPanel>
            <DataGrid x:Name="plats" Margin="30,40,30,0" IsReadOnly="True"></DataGrid>
        </StackPanel>
    </Grid>
</UserControl>
