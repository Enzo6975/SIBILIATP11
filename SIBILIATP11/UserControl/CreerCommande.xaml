<UserControl
    x:Class="SIBILIATP11.UserControl.CreerCommande"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:SIBILIATP11.UserControl"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="800"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid x:Name="grid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <StackPanel x:Name="stackPanel" Grid.Column="0">
            <StackPanel
                x:Name="stackPanel1"
                Height="60"
                Margin="20,0,20,0"
                VerticalAlignment="Top">
                <Label
                    Width="150"
                    Height="30"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Content="Rechercher :" />
                <TextBox x:Name="recherche" Height="30" />
            </StackPanel>

            <!--  MODIFIÉ : Ajout du ComboBox sous-catégorie et réorganisation  -->
            <StackPanel
                x:Name="stackPanel2"
                Margin="0,10,0,0"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                Orientation="Vertical">

                <!--  Première ligne : Catégories et Sous-catégories  -->
                <StackPanel
                    Height="30"
                    Margin="0,0,0,10"
                    HorizontalAlignment="Center"
                    Orientation="Horizontal">
                    <Label
                        VerticalAlignment="Center"
                        Content="Catégorie :"
                        FontWeight="SemiBold" />
                    <ComboBox
                        x:Name="cbCategorie"
                        Width="150"
                        Margin="5,0,20,0" />

                    <Label
                        VerticalAlignment="Center"
                        Content="Sous-catégorie :"
                        FontWeight="SemiBold" />
                    <ComboBox
                        x:Name="cbSousCategorie"
                        Width="150"
                        Margin="5,0,0,0" />
                </StackPanel>

                <!--  Deuxième ligne : Date et Prix  -->
                <StackPanel
                    Height="30"
                    HorizontalAlignment="Center"
                    Orientation="Horizontal">
                    <Label
                        VerticalAlignment="Center"
                        Content="Date :"
                        FontWeight="SemiBold" />
                    <DatePicker x:Name="dpDateCommande" Margin="5,0,20,0" />

                    <Label
                        VerticalAlignment="Center"
                        Content="Prix de"
                        FontWeight="SemiBold" />
                    <TextBox
                        x:Name="txtPrixMin"
                        Width="50"
                        Margin="5,0,0,0"
                        TextAlignment="Center" />
                    <Label
                        Margin="5,0,0,0"
                        VerticalAlignment="Center"
                        Content="à" />
                    <TextBox
                        x:Name="txtPrixMax"
                        Width="50"
                        Margin="5,0,0,0"
                        TextAlignment="Center" />
                    <Label
                        Margin="5,0,0,0"
                        VerticalAlignment="Center"
                        Content="€" />
                </StackPanel>
            </StackPanel>

            <DataGrid
                x:Name="plats"
                Height="450"
                Margin="30,20,30,0"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                AutoGenerateColumns="False"
                IsReadOnly="True">
                <DataGrid.Columns>
                    <DataGridTextColumn
                        Width="*"
                        Binding="{Binding NumPlat}"
                        Header="Numéro" />
                    <DataGridTextColumn
                        Width="*"
                        Binding="{Binding NomPlat}"
                        Header="Plat" />
                    <DataGridTextColumn
                        Width="*"
                        Binding="{Binding PrixUnitaire, StringFormat=F2}"
                        Header="Prix (€)" />
                    <DataGridTextColumn
                        Width="*"
                        Binding="{Binding DelaiPreparation}"
                        Header="Délai préparation" />
                    <DataGridTextColumn
                        Width="*"
                        Binding="{Binding NbPersonnes}"
                        Header="Nb personnes" />

                    <DataGridTemplateColumn Width="*" Header="Action">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Button
                                    HorizontalAlignment="Stretch"
                                    VerticalAlignment="Stretch"
                                    Background="#FF4CAF50"
                                    BorderBrush="#FF4CAF50"
                                    Click="AjouterPlat_Click"
                                    Content="Ajouter"
                                    FontWeight="Bold"
                                    Foreground="White" />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </StackPanel>

        <Border
            Grid.Column="1"
            Margin="10"
            Background="White"
            BorderBrush="#E0E0E0"
            BorderThickness="1"
            CornerRadius="5">
            <StackPanel Margin="10">
                <TextBlock
                    Margin="0,0,0,10"
                    FontSize="16"
                    FontWeight="Bold"
                    Text="Récapitulatif de la commande" />

                <DataGrid
                    x:Name="recapPanier"
                    Height="300"
                    AutoGenerateColumns="False"
                    CanUserAddRows="False"
                    ItemsSource="{Binding LignesDeLaCommande}">
                    <DataGrid.Columns>
                        <DataGridTextColumn
                            Width="*"
                            Binding="{Binding UnPlat.NomPlat}"
                            Header="Plat"
                            IsReadOnly="True" />
                        <DataGridTextColumn
                            Width="*"
                            Binding="{Binding Quantite}"
                            Header="Qté" />
                        <DataGridTextColumn
                            Width="*"
                            Binding="{Binding UnPlat.PrixUnitaire, StringFormat=F2}"
                            Header="Prix"
                            IsReadOnly="True" />
                        <DataGridTextColumn
                            x:Name="delai"
                            Width="*"
                            Binding="{Binding UnPlat.DelaiPreparation}"
                            Header="Delai Preparation" />
                    </DataGrid.Columns>
                </DataGrid>

                <StackPanel
                    Margin="0,10,0,0"
                    HorizontalAlignment="Right"
                    Orientation="Horizontal">
                    <TextBlock FontWeight="Bold" Text="Total: " />
                    <TextBlock
                        x:Name="textBlockTotal"
                        FontWeight="Bold"
                        Text="{Binding CommandeEnCours.PrixTotal, StringFormat=F2}" />
                    <TextBlock FontWeight="Bold" Text=" €" />
                </StackPanel>

                <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                    <TextBlock Text="Client : " />
                    <TextBlock x:Name="txtClient" Text="{}" />
                </StackPanel>

                <Button
                    x:Name="selectionClient"
                    Height="35"
                    Margin="30,10,30,0"
                    Background="#E30613"
                    Click="selectionClient_Click"
                    Content="Sélectionner un client"
                    FontWeight="Bold"
                    Foreground="White" />

                <Label Margin="0,20,0,0" Content="Date de retrait : " />
                <DatePicker x:Name="dateRetrait" />

                <Button
                    x:Name="btnValiderCommande"
                    Height="35"
                    Margin="0,20,0,0"
                    Background="#E30613"
                    Click="ValiderCommande_Click"
                    Content="Valider la commande"
                    FontWeight="Bold"
                    Foreground="White" />
            </StackPanel>
        </Border>
    </Grid>
</UserControl>