<UserControl
    x:Class="SIBILIATP11.UserControl.CreerCommande"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:SIBILIATP11.UserControl"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="800"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid x:Name="grid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <StackPanel x:Name="stackPanel" Grid.Column="0">
            <StackPanel x:Name="stackPanel1" Height="60" Margin="20,0,20,0" VerticalAlignment="Top">
                <Label Width="150" Height="30" HorizontalAlignment="Left" VerticalAlignment="Top" Content="Rechercher :" />
                <TextBox x:Name="recherche" Height="30" />
            </StackPanel>
            <StackPanel x:Name="stackPanel2" Height="30" Margin="0,10,0,0" HorizontalAlignment="Center" 
                        VerticalAlignment="Top" Orientation="Horizontal">
                <ComboBox x:Name="cbCategorie" Width="150" />
                <DatePicker x:Name="dpDateCommande" Margin="30,0,0,0" />
                <Label Margin="30,0,0,0" Content="De" />
                <TextBox x:Name="txtPrixMin" Width="50" Margin="5,0,0,0" TextAlignment="Center" />
                <Label Margin="5,0,0,0" Content="à" />
                <TextBox x:Name="txtPrixMax" Width="50" Margin="5.5,0,0,0" />
            </StackPanel>
            <DataGrid x:Name="plats" Height="500" Margin="30,30,30,0" HorizontalAlignment="Center" 
                      VerticalAlignment="Top" AutoGenerateColumns="False" IsReadOnly="True">
                <DataGrid.Columns>
                    <DataGridTextColumn Width="*" Binding="{Binding NumPlat}" Header="Numéro" />
                    <DataGridTextColumn Width="*" Binding="{Binding NomPlat}" Header="Plat" />
                    <DataGridTextColumn Width="*" Binding="{Binding PrixUnitaire, StringFormat=F2}" Header="Prix (€)" />
                    <DataGridTextColumn Width="*" Binding="{Binding DelaiPreparation}" Header="Délai préparation" />
                    <DataGridTextColumn Width="*" Binding="{Binding NbPersonnes}" Header="Nb personnes" />

                    <DataGridTemplateColumn Header="Action" Width="*">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Button Content="Ajouter" Click="AjouterPlat_Click"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </StackPanel>

        <Border Grid.Column="1" Margin="10" Background="White" BorderBrush="#E0E0E0" 
                BorderThickness="1" CornerRadius="5">
            <StackPanel Margin="10">
                <TextBlock Text="Récapitulatif de la commande" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>

                <DataGrid x:Name="recapPanier" Height="300" AutoGenerateColumns="False" CanUserAddRows="False" 
                          IsReadOnly="True" ItemsSource="{Binding LignesDeLaCommande}">
                    <DataGrid.Columns>
                        <DataGridTextColumn Width="*" Binding="{Binding UnPlat.NomPlat}" Header="Plat" />
                        <DataGridTextColumn Width="60" Binding="{Binding Quantite}" Header="Qté" />
                        <DataGridTextColumn Width="80" Binding="{Binding UnPlat.PrixUnitaire, StringFormat=F2}" Header="Prix" />
                    </DataGrid.Columns>
                </DataGrid>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                    <TextBlock Text="Total: " FontWeight="Bold"/>
                    <TextBlock x:Name="textBlockTotal" Text="{Binding CommandeEnCours.PrixTotal, StringFormat=F2}" FontWeight="Bold"/>
                    <TextBlock Text=" €" FontWeight="Bold"/>
                </StackPanel>



                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <TextBlock Text="Client : " />
                    <TextBlock x:Name="txtClient" />



                </StackPanel>
                <Button x:Name="selectionClient" Content="Sélectionner un client" Height="35" Margin="30,10,30,0" 
                        Background="#E30613" Foreground="White" FontWeight="Bold" Click="selectionClient_Click"/>


                <Button x:Name="btnValiderCommande" Content="Valider la commande" Height="35" Margin="0,20,0,0" 
                        Background="#E30613" Foreground="White" FontWeight="Bold" Click="ValiderCommande_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>