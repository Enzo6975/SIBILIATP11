<UserControl x:Class="SIBILIATP11.UserControl.SelectionnerClient"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SIBILIATP11.UserControl"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="White">
        <Label Content="Créer un client" Background="#FFFD2828" FontSize="30" Foreground="White" FontWeight="Bold" VerticalAlignment="Top" />
        <StackPanel>
            <DataGrid
                x:Name="clients"
                Height="300"
                Margin="30,30,30,0"
                HorizontalAlignment="Center"
                IsReadOnly="True" 
            ItemsSource="{Binding Client}">
                <DataGrid.Columns>
                    <DataGridTextColumn
                        Width="*"
                        Binding="{Binding NumClient, ValidatesOnExceptions=False}"
                        Header="numClient"/>
                    <DataGridTextColumn
                        Width="*"
                        Binding="{Binding nomClient, ValidatesOnExceptions=True}"
                        Header="Nom"/>
                    <DataGridTextColumn
                        Width="*"
                        Binding="{Binding prenomClient, ValidatesOnExceptions=True}"
                        Header="Prenom"/>
                </DataGrid.Columns>
            </DataGrid>
            <Button x:Name="butCreerClient" Content="Creer un client" Margin="0,24,0,0" HorizontalAlignment="Center" Background="#FFFD2828" Foreground="White" FontSize="16" FontWeight="Bold"/>

        </StackPanel>
    </Grid>
   
</UserControl>
