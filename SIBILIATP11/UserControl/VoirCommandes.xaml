<UserControl
    x:Class="SIBILIATP11.UserControl.VoirCommandes"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="600"
    d:DesignWidth="1000"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="200" />
        </Grid.RowDefinitions>
        <Border
            Grid.Row="0"
            Margin="5"
            Padding="10"
            Background="#F5F5F5">
            <StackPanel>
                <TextBlock
                    Margin="0,0,0,10"
                    FontSize="14"
                    FontWeight="Bold"
                    Text="Filtres de recherche" />
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="200" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <TextBlock
                        Grid.Column="0"
                        Margin="0,0,10,0"
                        VerticalAlignment="Center"
                        Text="Client :" />
                    <TextBox
                        x:Name="inputClient"
                        Grid.Column="1"
                        Margin="0,0,10,0"
                        VerticalAlignment="Center"
                        TextChanged="inputClient_TextChanged" />
                    <Button
                        x:Name="btnClearFilter"
                        Grid.Column="2"
                        Width="25"
                        Height="25"
                        Margin="10,0,10,0"
                        Click="btnClearFilter_Click"
                        Content="✕"
                        FontWeight="Bold"
                        ToolTip="Effacer la recherche" />
                    <Button
                        x:Name="btnCommandesDuJour"
                        Grid.Column="3"
                        Height="25"
                        Margin="10,0,0,0"
                        Padding="8,2"
                        Background="#2196F3"
                        Click="btnCommandesDuJour_Click"
                        Content="📅 Commandes du jour"
                        FontWeight="SemiBold"
                        Foreground="White"
                        ToolTip="Afficher les commandes à retirer aujourd'hui" />
                </Grid>
                <TextBlock
                    x:Name="txtFiltreActif"
                    Margin="0,5,0,0"
                    FontSize="12"
                    FontStyle="Italic"
                    Foreground="#666666"
                    Visibility="Collapsed" />
            </StackPanel>
        </Border>
        <DataGrid
            x:Name="dgCommandes"
            Grid.Row="1"
            Margin="5"
            AutoGenerateColumns="False"
            GridLinesVisibility="All"
            HeadersVisibility="Column"
            IsReadOnly="True"
            SelectionChanged="dgCommandes_SelectionChanged">
            <DataGrid.Columns>
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding NumCommande}"
                    Header="N° Commande"
                    IsReadOnly="True" />
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding DateCommande, StringFormat=dd/MM/yyyy}"
                    Header="Date commande"
                    IsReadOnly="True" />
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding DateRetraitPrevue, StringFormat=dd/MM/yyyy}"
                    Header="Date prévue"
                    IsReadOnly="True" />
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding UnClient.NomClient}"
                    Header="Client"
                    IsReadOnly="True" />
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding UnClient.PrenomClient}"
                    Header="Prénom"
                    IsReadOnly="True" />
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding PrixTotal, StringFormat=F2}"
                    Header="Montant (€)"
                    IsReadOnly="True" />
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding Payee}"
                    Header="Payée"
                    IsReadOnly="True">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding Payee}" Value="True">
                                    <Setter Property="Text" Value="✓ Oui" />
                                    <Setter Property="Foreground" Value="Green" />
                                </DataTrigger>
                                <DataTrigger Binding="{Binding Payee}" Value="False">
                                    <Setter Property="Text" Value="✗ Non" />
                                    <Setter Property="Foreground" Value="Red" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding Retiree}"
                    Header="Retirée"
                    IsReadOnly="True">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding Retiree}" Value="True">
                                    <Setter Property="Text" Value="✓ Oui" />
                                    <Setter Property="Foreground" Value="Green" />
                                </DataTrigger>
                                <DataTrigger Binding="{Binding Retiree}" Value="False">
                                    <Setter Property="Text" Value="✗ Non" />
                                    <Setter Property="Foreground" Value="Red" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>
        <StackPanel
            Grid.Row="2"
            Margin="5"
            HorizontalAlignment="Center"
            Orientation="Horizontal">
            <Button
                x:Name="btnEdit"
                Margin="5"
                Padding="10,5"
                Click="btnEdit_Click"
                Content="Modifier" />
            <Button
                x:Name="btnDel"
                Margin="5"
                Padding="10,5"
                Click="btnDel_Click"
                Content="Supprimer" />
        </StackPanel>
        <Border
            Grid.Row="3"
            Margin="5"
            Padding="10"
            Background="#F9F9F9">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <TextBlock
                    x:Name="txtDetailCommande"
                    Grid.Row="0"
                    Margin="0,0,0,10"
                    FontSize="14"
                    FontWeight="Bold"
                    Text="Sélectionnez une commande pour voir les détails" />
                <DataGrid
                    x:Name="dgPlatsCommande"
                    Grid.Row="1"
                    AutoGenerateColumns="False"
                    GridLinesVisibility="All"
                    HeadersVisibility="Column"
                    IsReadOnly="True">
                    <DataGrid.Columns>
                        <DataGridTextColumn
                            Width="*"
                            Binding="{Binding UnPlat.NumPlat}"
                            Header="Numéro Plat" />
                        <DataGridTextColumn
                            Width="*"
                            Binding="{Binding UnPlat.NomPlat}"
                            Header="Nom du Plat" />
                        <DataGridTextColumn
                            Width="*"
                            Binding="{Binding Quantite}"
                            Header="Quantité" />
                        <DataGridTextColumn
                            Width="*"
                            Binding="{Binding UnPlat.PrixUnitaire, StringFormat=F2}"
                            Header="Prix unitaire (€)" />
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Border>
    </Grid>
</UserControl>