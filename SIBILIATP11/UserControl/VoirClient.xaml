<UserControl
    x:Class="SIBILIATP11.UserControl.VoirClient"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:SIBILIATP11.UserControl"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Barre de recherche -->
        <Border Grid.Row="0" Background="#F5F5F5" Padding="10" Margin="30,30,30,10">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Rechercher :" VerticalAlignment="Center" Margin="0,0,10,0" FontWeight="Bold"/>
                <TextBox x:Name="txtRecherche" Width="300" Height="25" 
                         VerticalContentAlignment="Center"
                         TextChanged="TxtRecherche_TextChanged"
                         ToolTip="Rechercher par nom, prénom, téléphone, adresse ou ville"/>
                <Button x:Name="btnEffacerRecherche" Content="✕" Width="25" Height="25" 
                        Margin="5,0,0,0" Click="BtnEffacerRecherche_Click"
                        ToolTip="Effacer la recherche" FontWeight="Bold"/>
            </StackPanel>
        </Border>

        <!-- Boutons d'actions -->
        <Border Grid.Row="1" Background="#F0F0F0" Padding="10" Margin="30,0,30,10">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button x:Name="btnCreerClient" Content="Nouveau Client" Width="120" Height="30" 
                        Background="#FFFD2828" Foreground="White" FontWeight="Bold"
                        Margin="0,0,10,0" Click="BtnCreerClient_Click"
                        ToolTip="Créer un nouveau client"/>
                <Button x:Name="btnModifierClient" Content="Modifier" Width="80" Height="30" 
                        Background="#FF4CAF50" Foreground="White" FontWeight="Bold"
                        Margin="0,0,10,0" Click="BtnModifierClient_Click"
                        ToolTip="Modifier le client sélectionné"
                        IsEnabled="False"/>
                <Button x:Name="btnSupprimerClient" Content="Supprimer" Width="80" Height="30" 
                        Background="#FFF44336" Foreground="White" FontWeight="Bold"
                        Click="BtnSupprimerClient_Click"
                        ToolTip="Supprimer le client sélectionné"
                        IsEnabled="False"/>
            </StackPanel>
        </Border>

        <!-- DataGrid -->
        <DataGrid x:Name="clients" Grid.Row="2" Height="300" Margin="30,0,30,30" 
                  HorizontalAlignment="Center" VerticalAlignment="Top" 
                  AutoGenerateColumns="False" IsReadOnly="True" ItemsSource="{Binding .}"
                  SelectionChanged="Clients_SelectionChanged">
            <DataGrid.Columns>
                <DataGridTextColumn Width="50" Binding="{Binding NumClient, ValidatesOnExceptions=False}" Header="Num" />
                <DataGridTextColumn Width="*" Binding="{Binding NomClient, ValidatesOnExceptions=True}" Header="Nom" />
                <DataGridTextColumn Width="*" Binding="{Binding PrenomClient, ValidatesOnExceptions=True}" Header="Prenom" />
                <DataGridTextColumn Width="*" Binding="{Binding Tel, ValidatesOnExceptions=True}" Header="Téléphone" />
                <DataGridTextColumn Width="*" Binding="{Binding AdresseRue, ValidatesOnExceptions=True}" Header="Adresse" />
                <DataGridTextColumn Width="*" Binding="{Binding AdresseCP, ValidatesOnExceptions=True}" Header="Code postal" />
                <DataGridTextColumn Width="*" Binding="{Binding AdresseVille, ValidatesOnExceptions=True}" Header="Ville" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>