<UserControl
    x:Class="SIBILIATP11.UserControl.VoirClient"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:SIBILIATP11.UserControl"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Border
            Grid.Row="0"
            Margin="30,30,30,10"
            Padding="10"
            Background="#F5F5F5">
            <StackPanel Orientation="Horizontal">
                <TextBlock
                    Margin="0,0,10,0"
                    VerticalAlignment="Center"
                    FontWeight="Bold"
                    Text="Rechercher :" />
                <TextBox
                    x:Name="txtRecherche"
                    Width="300"
                    Height="25"
                    VerticalContentAlignment="Center"
                    TextChanged="TxtRecherche_TextChanged"
                    ToolTip="Rechercher par nom, prénom, téléphone, adresse ou ville" />
                <Button
                    x:Name="btnEffacerRecherche"
                    Width="25"
                    Height="25"
                    Margin="5,0,0,0"
                    Click="BtnEffacerRecherche_Click"
                    Content="✕"
                    FontWeight="Bold"
                    ToolTip="Effacer la recherche" />
            </StackPanel>
        </Border>

        <DataGrid
            x:Name="clients"
            Grid.Row="1"
            Height="350"
            Margin="30,0,30,30"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            AutoGenerateColumns="False"
            IsReadOnly="True"
            ItemsSource="{Binding .}">
            <DataGrid.Columns>
                <DataGridTextColumn
                    Width="50"
                    Binding="{Binding NumClient, ValidatesOnExceptions=False}"
                    Header="Num" />
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding NomClient, ValidatesOnExceptions=True}"
                    Header="Nom" />
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding PrenomClient, ValidatesOnExceptions=True}"
                    Header="Prenom" />
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding Tel, ValidatesOnExceptions=True}"
                    Header="Téléphone" />
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding AdresseRue, ValidatesOnExceptions=True}"
                    Header="Adresse" />
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding AdresseCP, ValidatesOnExceptions=True}"
                    Header="Code postal" />
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding AdresseVille, ValidatesOnExceptions=True}"
                    Header="Ville" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>