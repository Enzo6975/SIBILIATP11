<UserControl
    x:Class="SIBILIATP11.UserControl.CreerPlat"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="800"
    d:DesignWidth="1200"
    mc:Ignorable="d">

    <!--  Styles pour l'alignement des cellules  -->
    <UserControl.Resources>
        <Style x:Key="CenterCellStyle" TargetType="TextBlock">
            <Setter Property="HorizontalAlignment" Value="Center" />
            <Setter Property="VerticalAlignment" Value="Center" />
        </Style>
        <Style x:Key="RightCellStyle" TargetType="TextBlock">
            <Setter Property="HorizontalAlignment" Value="Right" />
            <Setter Property="VerticalAlignment" Value="Center" />
        </Style>
    </UserControl.Resources>
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!--  Titre  -->
        <TextBlock
            Grid.Row="0"
            Margin="0,0,0,20"
            HorizontalAlignment="Center"
            FontSize="20"
            FontWeight="Bold"
            Foreground="#FFE30613"
            Text="Créer un nouveau plat" />

        <!--  Formulaire de création  -->
        <Border
            Grid.Row="1"
            Margin="0,0,0,20"
            Padding="20"
            Background="#F9F9F9"
            BorderBrush="#E0E0E0"
            BorderThickness="1"
            CornerRadius="5">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="20" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="20" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="20" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="20" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="20" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <!--  Ligne 1  -->
                <Label
                    Grid.Row="0"
                    Grid.Column="0"
                    VerticalAlignment="Center"
                    Content="Nom du plat :"
                    FontWeight="Bold" />
                <TextBox
                    x:Name="txtNomPlat"
                    Grid.Row="0"
                    Grid.Column="1"
                    Height="30"
                    VerticalAlignment="Center" />
                <Label
                    Grid.Row="0"
                    Grid.Column="3"
                    VerticalAlignment="Center"
                    Content="Prix unitaire (€) :"
                    FontWeight="Bold" />
                <TextBox
                    x:Name="txtPrixUnitaire"
                    Grid.Row="0"
                    Grid.Column="4"
                    Height="30"
                    VerticalAlignment="Center" />

                <!--  Ligne 2  -->
                <Label
                    Grid.Row="2"
                    Grid.Column="0"
                    VerticalAlignment="Center"
                    Content="Délai préparation (jour) :"
                    FontWeight="Bold" />
                <TextBox
                    x:Name="txtDelaiPreparation"
                    Grid.Row="2"
                    Grid.Column="1"
                    Height="30"
                    VerticalAlignment="Center" />
                <Label
                    Grid.Row="2"
                    Grid.Column="3"
                    VerticalAlignment="Center"
                    Content="Nombre de personnes :"
                    FontWeight="Bold" />
                <TextBox
                    x:Name="txtNbPersonnes"
                    Grid.Row="2"
                    Grid.Column="4"
                    Height="30"
                    VerticalAlignment="Center" />

                <!--  Ligne 3  -->
                <Label
                    Grid.Row="4"
                    Grid.Column="0"
                    VerticalAlignment="Center"
                    Content="Sous-catégorie :"
                    FontWeight="Bold" />
                <ComboBox
                    x:Name="cbSousCategorie"
                    Grid.Row="4"
                    Grid.Column="1"
                    Height="30"
                    VerticalAlignment="Center" />
                <Label
                    Grid.Row="4"
                    Grid.Column="3"
                    VerticalAlignment="Center"
                    Content="Période :"
                    FontWeight="Bold" />
                <ComboBox
                    x:Name="cbPeriode"
                    Grid.Row="4"
                    Grid.Column="4"
                    Height="30"
                    VerticalAlignment="Center" />

                <!--  Info  -->
                <TextBlock
                    Grid.Row="6"
                    Grid.Column="0"
                    Grid.ColumnSpan="5"
                    HorizontalAlignment="Center"
                    FontStyle="Italic"
                    Foreground="Gray"
                    Text="Remplissez tous les champs pour créer un nouveau plat." />
            </Grid>
        </Border>

        <!--  Boutons  -->
        <StackPanel
            Grid.Row="2"
            Margin="0,0,0,20"
            HorizontalAlignment="Center"
            Orientation="Horizontal">
            <Button
                x:Name="btnCreerPlat"
                Width="120"
                Height="35"
                Margin="0,0,10,0"
                Background="#FFE30613"
                Click="btnCreerPlat_Click"
                Content="Créer le plat"
                FontWeight="Bold"
                Foreground="White" />
            <Button
                x:Name="btnAnnuler"
                Width="120"
                Height="35"
                Margin="10,0,0,0"
                Background="LightGray"
                Click="btnAnnuler_Click"
                Content="Annuler" />
            <Button
                x:Name="btnRafraichir"
                Width="120"
                Height="35"
                Margin="10,0,0,0"
                Background="#FF4CAF50"
                Click="btnRafraichir_Click"
                Content="Rafraîchir"
                FontWeight="Bold"
                Foreground="White" />
        </StackPanel>

        <!--  DataGrid des plats existants  -->
        <Border
            Grid.Row="3"
            Background="White"
            BorderBrush="#E0E0E0"
            BorderThickness="1"
            CornerRadius="5">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <!--  En-tête du DataGrid  -->
                <Border
                    Grid.Row="0"
                    Padding="15,10"
                    Background="#FFE30613"
                    CornerRadius="5,5,0,0">
                    <TextBlock
                        HorizontalAlignment="Center"
                        FontSize="16"
                        FontWeight="Bold"
                        Foreground="White"
                        Text="📋 Liste des plats existants" />
                </Border>

                <!--  DataGrid  -->
                <DataGrid
                    x:Name="dgPlatsExistants"
                    Grid.Row="1"
                    Margin="10"
                    AlternatingRowBackground="#F8F8F8"
                    AutoGenerateColumns="False"
                    Background="White"
                    BorderThickness="0"
                    CanUserAddRows="False"
                    CanUserDeleteRows="False"
                    CanUserResizeRows="False"
                    GridLinesVisibility="Horizontal"
                    HeadersVisibility="Column"
                    IsReadOnly="True">

                    <DataGrid.Columns>
                        <!--  Numéro  -->
                        <DataGridTextColumn
                            Width="60"
                            Binding="{Binding NumPlat}"
                            Header="N°">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="HorizontalAlignment" Value="Center" />
                                    <Setter Property="VerticalAlignment" Value="Center" />
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>

                        <!--  Nom du plat  -->
                        <DataGridTextColumn
                            Width="*"
                            MinWidth="200"
                            Binding="{Binding NomPlat}"
                            Header="Nom du plat" />

                        <!--  Prix unitaire  -->
                        <DataGridTextColumn
                            Width="100"
                            Binding="{Binding PrixUnitaire, StringFormat=F2}"
                            Header="Prix (€)">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="HorizontalAlignment" Value="Right" />
                                    <Setter Property="VerticalAlignment" Value="Center" />
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>

                        <!--  Délai de préparation  -->
                        <DataGridTextColumn
                            Width="80"
                            Binding="{Binding DelaiPreparation}"
                            Header="Délai (j)">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="HorizontalAlignment" Value="Center" />
                                    <Setter Property="VerticalAlignment" Value="Center" />
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>

                        <!--  Nombre de personnes  -->
                        <DataGridTextColumn
                            Width="70"
                            Binding="{Binding NbPersonnes}"
                            Header="Pers.">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="HorizontalAlignment" Value="Center" />
                                    <Setter Property="VerticalAlignment" Value="Center" />
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>

                        <!--  Sous-catégorie  -->
                        <DataGridTextColumn
                            Width="150"
                            Binding="{Binding UneSousCategorie.NomSousCategorie}"
                            Header="Sous-catégorie" />

                        <!--  Période  -->
                        <DataGridTextColumn
                            Width="120"
                            Binding="{Binding UnePeriode.LibellePeriode}"
                            Header="Période" />
                    </DataGrid.Columns>

                    <!--  Style des lignes  -->
                    <DataGrid.RowStyle>
                        <Style TargetType="DataGridRow">
                            <Setter Property="Height" Value="35" />
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#E3F2FD" />
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </DataGrid.RowStyle>

                    <!--  Style des en-têtes  -->
                    <DataGrid.ColumnHeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="Background" Value="#F5F5F5" />
                            <Setter Property="Foreground" Value="#333" />
                            <Setter Property="FontWeight" Value="Bold" />
                            <Setter Property="Height" Value="40" />
                            <Setter Property="Padding" Value="10,0" />
                            <Setter Property="BorderBrush" Value="#E0E0E0" />
                            <Setter Property="BorderThickness" Value="0,0,1,1" />
                        </Style>
                    </DataGrid.ColumnHeaderStyle>
                </DataGrid>
            </Grid>
        </Border>
    </Grid>
</UserControl>