<Window
    x:Class="SIBILIATP11.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:SIBILIATP11"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:uc="clr-namespace:SIBILIATP11.UserControl"
    x:Name="Sibilia"
    Title="MainWindow"
    Width="800"
    Height="450"
    WindowStartupLocation="CenterScreen"
    WindowState="Maximized"
    mc:Ignorable="d">
    <Grid x:Name="LaGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="10*" />
            <RowDefinition Height="80*" />
            <RowDefinition Height="10*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20*" />
            <ColumnDefinition Width="80*" />
        </Grid.ColumnDefinitions>
        <StackPanel
            x:Name="StackPanelLogo"
            Grid.Row="0"
            Grid.Column="2">
            <StackPanel.Background>
                <ImageBrush ImageSource="/logo-sibilia.png" Stretch="Uniform" />
            </StackPanel.Background>
        </StackPanel>
        <StackPanel
            x:Name="StackPanelFond"
            Grid.Row="0"
            Grid.RowSpan="3"
            Grid.Column="0"
            Background="#FFE30613">
            <TextBlock
                x:Name="TxtBlockConnexion"
                Width="{Binding ActualWidth, ElementName=StackPanelFond, Mode=OneWay}"
                FontWeight="Bold"
                Foreground="White"
                Text="Connecté en tant que -&#x0a;Enzo Pagès"
                TextAlignment="Center"
                TextWrapping="Wrap" />
        </StackPanel>
        <StackPanel
            x:Name="TailleBonne"
            Grid.Row="1"
            Grid.RowSpan="2"
            Grid.Column="0" />
        <StackPanel
            x:Name="StackPanelMenu"
            Grid.Row="1"
            Grid.ColumnSpan="2">
            <TabControl
                Grid.ColumnSpan="2"
                Height="{Binding ActualHeight, ElementName=TailleBonne, Mode=OneWay}"
                Margin="-2,-2,0,0"
                Background="{x:Null}"
                BorderBrush="{x:Null}"
                TabStripPlacement="Left">
                <TabItem
                    Width="{Binding ActualWidth, ElementName=StackPanelFond, Mode=OneWay}"
                    Height="70"
                    FontSize="12"
                    FontWeight="Bold"
                    Header="CRÉER UNE COMMANDE" />
                <TabItem
                    Width="{Binding ActualWidth, ElementName=StackPanelFond, Mode=OneWay}"
                    Height="70"
                    FontSize="12"
                    FontWeight="Bold"
                    Header="VOIR LES COMMANDES">
                    <uc:VoirCommandes />
                </TabItem>
                <TabItem
                    Width="{Binding ActualWidth, ElementName=StackPanelFond, Mode=OneWay}"
                    Height="70"
                    FontSize="12"
                    FontWeight="Bold"
                    Header="COMMANDE À RESTITUER">
                    <ContentControl x:Name="ContentControlCommandeARestituer" />
                </TabItem>
                <TabItem
                    Width="{Binding ActualWidth, ElementName=StackPanelFond, Mode=OneWay}"
                    Height="70"
                    FontSize="12"
                    FontWeight="Bold"
                    Header="CLIENTS">
                    <uc:VoirClient />
                </TabItem>
            </TabControl>
        </StackPanel>
        <StackPanel
            x:Name="StackPanelDeconnexion"
            Grid.Row="2"
            Grid.Column="0"
            Background="#FFE30613">
            <Button
                x:Name="ButDeconnexion"
                Width="{Binding ActualWidth, ElementName=StackPanelDeconnexion, Mode=OneWay}"
                Height="{Binding ActualHeight, ElementName=StackPanelDeconnexion, Mode=OneWay}"
                Background="#FFE30613"
                BorderBrush="#FFE30613"
                Click="ButDeconnexion_Click"
                Content="Déconnexion"
                FontWeight="Bold"
                Foreground="White"
                RenderTransformOrigin="0.5,0.5">
                <Button.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform />
                        <SkewTransform AngleX="0" />
                        <RotateTransform />
                        <TranslateTransform X="0" />
                    </TransformGroup>
                </Button.RenderTransform>
            </Button>
        </StackPanel>
    </Grid>
</Window>
