<Window
    x:Class="SIBILIATP11.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:SIBILIATP11"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:uc="clr-namespace:SIBILIATP11.UserControl"
    x:Name="Sibilia"
    Title="Sibilia - Gestion des Commandes"
    Width="1200"
    Height="800"
    Background="#F5F5F5"
    WindowStartupLocation="CenterScreen"
    WindowState="Maximized"
    mc:Ignorable="d">

    <Window.Resources>
        <Style x:Key="CustomTabControl" TargetType="TabControl">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TabControl">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="20*"/>
                                <ColumnDefinition Width="80*"/>
                            </Grid.ColumnDefinitions>

                            <TabPanel Grid.Column="0" 
                                      IsItemsHost="True" 
                                      Background="Transparent"/>

                            <ContentPresenter Grid.Column="1" 
                                              ContentSource="SelectedContent"/>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid x:Name="LaGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="20*" />
            <RowDefinition Height="70*" />
            <RowDefinition Height="10*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20*" />
            <ColumnDefinition Width="80*" />
        </Grid.ColumnDefinitions>

        <Border Grid.Row="0" Grid.Column="1" Background="White" BorderBrush="#E0E0E0" BorderThickness="0,0,0,2">
            <Grid>
                <Image Margin="20" Source="/logo-sibilia.png" Stretch="Uniform" RenderOptions.BitmapScalingMode="HighQuality"/>
                <Rectangle Height="4" HorizontalAlignment="Stretch" VerticalAlignment="Bottom" Fill="#E30613" />
            </Grid>
        </Border>

        <Border x:Name="BorderLateral" Grid.Row="0" Grid.RowSpan="3" Grid.Column="0" Background="#E30613">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <Border x:Name="Border1" Grid.Row="0" Background="#D60511" Margin="0,0,0,10">
                    <StackPanel Margin="15,20">
                        <Ellipse Width="60" Height="60" Margin="0,0,0,15" Fill="White"/>
                        <TextBlock x:Name="TxtBlockConnexion" FontSize="12" FontWeight="Bold" Foreground="White" 
                                   LineHeight="16" Text="Connecté en tant que -&#x0a;Enzo Pagès" 
                                   TextAlignment="Center" TextWrapping="Wrap" />
                    </StackPanel>
                </Border>

                <Border Grid.Row="2" Margin="0,10,0,0" Background="#D60511">
                    <Button x:Name="ButDeconnexion" Margin="15" Padding="15,10" Background="Transparent" 
                            BorderBrush="White" BorderThickness="2" Click="ButDeconnexion_Click" 
                            Content="🚪 DÉCONNEXION" Cursor="Hand" FontSize="12" FontWeight="Bold" 
                            Foreground="White">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" 
                                                    BorderBrush="{TemplateBinding BorderBrush}" 
                                                    BorderThickness="{TemplateBinding BorderThickness}" 
                                                    CornerRadius="8">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="White" />
                                                    <Setter Property="Foreground" Value="#E30613" />
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                    </Button>
                </Border>
            </Grid>
        </Border>

        <TabControl x:Name="MainTabControl" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" 
                    Style="{StaticResource CustomTabControl}">

            <TabItem x:Name="TabCreerCommande" Header="📝 CRÉER UNE COMMANDE" 
                     Style="{StaticResource SidebarTabItemStyle}">
                <uc:CreerCommande x:Name="CreerCommande" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" />
            </TabItem>

            <TabItem x:Name="TabVoirCommandes" Header="👁️ VOIR LES COMMANDES" 
                     Style="{StaticResource SidebarTabItemStyle}" IsSelected="True">
                <uc:VoirCommandes x:Name="VoirCommandes" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" />
            </TabItem>

            <TabItem x:Name="TabCreerPlat" Header="🍽️ CRÉER UN PLAT" 
                     Style="{StaticResource SidebarTabItemStyle}">
                <uc:CreerPlat x:Name="CreerPlat" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" />
            </TabItem>

            <TabItem x:Name="TabClients" Header="👥 CLIENTS" 
                     Style="{StaticResource SidebarTabItemStyle}">
                <uc:VoirClient x:Name="VoirClient" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" />
            </TabItem>
        </TabControl>
    </Grid>
</Window>